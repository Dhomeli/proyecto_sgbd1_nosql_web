<div class="card card-body p-4 rounded-0 bg-dark text-white">
  <h3>Agregue un curso</h3>
  <h4>El que planea llevar este verano</h4>
  <form action="/tasks/add" method="post">

    {{! Title Input }}
    <div class="mb-3">
      <label for="title">Escriba el t√≠tulo del curso :</label>
      <input
        id="title"
        class="form-control rounded-0 bg-dark text-white"
        type="text"
        name="title"
        placeholder="Title"
        autofocus
      />
    </div>

    {{! Description Input }}
    <div class="mb-3">
      <label for="description">De que trata el curso</label>
      <textarea
        class="form-control rounded-0 bg-dark text-white"
        name="description"
        cols="80"
        placeholder="Add a Description"
      ></textarea>
    </div>

    <button class="btn btn-primary" type="submit">Agregar</button>
  </form>
</div>